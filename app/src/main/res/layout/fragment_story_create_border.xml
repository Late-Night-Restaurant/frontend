<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/default_layout"
        android:id="@+id/included"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my_story_create_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/included"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">
        <TextView
            android:id="@+id/tv_my_story_create_border_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이야기 집 간판"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageButton
            android:id="@+id/ib_my_story_create_border_info"
            android:layout_width="@dimen/icon_small_width"
            android:layout_height="@dimen/icon_small_height"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_my_story_create_border_headline"
            android:src="@drawable/ic_question_mark"
            android:background="#00ff0000"
            android:layout_marginStart="4dp"/>
        <TextView
            android:id="@+id/tv_my_story_create_main_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/high_radius_button_off"
            android:text="메인화면에 보여지는 이야기 집의 이미지 입니다."
            app:layout_constraintStart_toEndOf="@id/ib_my_story_create_border_info"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"
            android:textSize="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="invisible"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ib_my_story_create_border"
        android:layout_width="328dp"
        android:layout_height="156dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize12Percent"
        android:background="@color/Gray_06"
        android:scaleType="centerCrop"
        android:foreground="@drawable/main_menu_gradient"
        app:layout_constraintTop_toBottomOf="@id/cl_my_story_create_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/iv_my_story_create_border_ex"
        android:layout_width="@dimen/icon_big_width"
        android:layout_height="@dimen/icon_big_height"
        android:src="@drawable/ic_camera"
        app:layout_constraintBottom_toBottomOf="@+id/ib_my_story_create_border"
        app:layout_constraintEnd_toEndOf="@+id/ib_my_story_create_border"
        app:layout_constraintStart_toStartOf="@+id/ib_my_story_create_border"
        app:layout_constraintTop_toTopOf="@+id/ib_my_story_create_border" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_my_story_create_border_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_my_story_create_border"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_my_story_create_border_title_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이야기 집 이름"
            android:textColor="@color/Gray_05"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_my_story_create_border_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_story_create_border_title_headline"
            app:errorEnabled="true"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/et_my_story_create_border_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="12자 이내로 입력해주세요"
                android:textSize="14sp"
                android:maxLength="12"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/Gray_06"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_my_story_create_border_intro_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="한줄 소개"
            android:textColor="@color/Gray_05"
            app:layout_constraintTop_toBottomOf="@+id/til_my_story_create_border_title"
            app:layout_constraintStart_toStartOf="parent"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_my_story_create_intro_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_my_story_create_border_intro_headline"
            app:errorEnabled="true"
            app:hintEnabled="false">
            <EditText
                android:id="@+id/et_my_story_create_border_intro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="24자 이내로 입력해주세요"
                android:textSize="14sp"
                android:maxLength="24"
                android:inputType="textEmailAddress"
                android:backgroundTint="@color/Gray_06"/>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:id="@+id/btn_my_story_create_border_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="완료"
        android:textColor="@drawable/btn_text_color"
        android:background="@drawable/low_radius_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="56dp"
        android:enabled="false"/>
</androidx.constraintlayout.widget.ConstraintLayout>