<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="model"
            type="com.example.simya.src.ui.viewmodel.login.signin.EmailLoginViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/default_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_email_signin_headline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어서오세요!"
            android:textColor="@color/Primary_01"
            android:textSize="40dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/default_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"/>
        <TextView
            android:id="@+id/tv_email_signin_headline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="심야식당입니다"
            android:textColor="@color/Gray_06"
            android:textSize="24dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/tv_email_signin_headline1"
            app:layout_constraintStart_toStartOf="@id/tv_email_signin_headline1" />
        <LinearLayout
            android:id="@+id/ll_signup_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_email_signin_login"
            android:layout_marginBottom="56dp"
            android:orientation="vertical">
            <!--        이메일 입력창-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email_sign_in_input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:errorEnabled="true"
                app:hintEnabled="false">
                <EditText
                    android:id="@+id/edt_email_sign_in_input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이메일을 입력하세요"
                    android:textSize="15dp"
                    android:inputType="textEmailAddress"
                    android:backgroundTint="@color/Gray_06"/>
            </com.google.android.material.textfield.TextInputLayout>
            <!--        비밀번호 입력창-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_email_sign_in_input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:errorEnabled="true"
                app:hintEnabled="false">
                <EditText
                    android:id="@+id/edt_email_sign_in_input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="비밀번호를 입력하세요"
                    android:textSize="15dp"
                    android:inputType="textPassword"
                    android:backgroundTint="@color/Gray_06"
                    />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <!--    회원가입 버튼-->
        <Button
            android:id="@+id/btn_email_signin_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:background="@drawable/low_radius_button"
            app:layout_constraintBottom_toTopOf="@id/ll_signup_email_find"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            />
        <!--    계정찾기 레이아웃-->
        <LinearLayout
            android:id="@+id/ll_signup_email_find"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/ll_signup_email_signup"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_signup_email_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="계정을 잊으셨나요?"
                android:textColor="@color/Gray_07" />
            <Button
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/btn_sign_in_email_find_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일 찾기"
                android:textColor="@color/Primary_02"
                android:background="#00ff0000"/>
            <TextView
                android:id="@+id/tv_signup_email_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="또는"
                android:textColor="@color/Gray_07"
                android:layout_marginLeft="4dp"/>
            <Button
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/btn_sign_in_email_find_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="비밀번호 변경"
                android:textColor="@color/Primary_02"
                android:background="#00ff0000"/>
        </LinearLayout>
        <!--    회원가입 버튼 레이아웃-->
        <LinearLayout
            android:id="@+id/ll_signup_email_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="56dp"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_signup_email_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="심야식당이 처음이신가요?"
                android:textColor="@color/Gray_07"
                />
            <Button
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:layout_marginLeft="4dp"
                android:id="@+id/btn_signin_email_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textColor="@color/Primary_02"
                android:background="#00ff0000"/>
        </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
