<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include 
        android:id="@+id/included"
        layout="@layout/default_layout"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <RatingBar
        android:id="@+id/rb_item_edit_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/included"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:numStars="5"
        android:layout_marginTop="@dimen/default_resource_distance"/>
    <EditText
        android:id="@+id/edt_item_edit_review"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:background="@drawable/bg_multiline_input_text"
        app:layout_constraintTop_toBottomOf="@id/rb_item_edit_review"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/default_layout_margin"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:hint="@string/review_hint"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:ems="10"
        android:padding="10dp"
        android:textSize="14dp"
        android:layout_marginTop="@dimen/default_resource_distance"/>
    <Button
        android:id="@+id/btn_item_edit_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="수정하기"
        android:background="@drawable/low_radius_button"
        android:layout_marginStart="@dimen/default_layout_margin"
        android:layout_marginEnd="@dimen/default_layout_margin"
        android:layout_marginBottom="@dimen/default_bottom_margin"/>
</androidx.constraintlayout.widget.ConstraintLayout>